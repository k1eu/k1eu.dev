---
import Github from "./icons/Github.astro";
import Twitter from "./icons/Twitter.astro";
import Linkedin from "./icons/Linkedin.astro";

const socials = [
  {
    name: "Github",
    Icon: Github,
    href: "https://github.com/k1eu",
  },
  {
    name: "Twitter",
    Icon: Twitter,
    href: "https://x.com/k1euu",
  },
  {
    name: "LinkedIn",
    Icon: Linkedin,
    href: "https://www.linkedin.com/in/k1eu",
  },
];
---

<ul class="mt-4 flex items-center justify-center gap-4">
  {
    socials.map(({ href, Icon }) => (
      <li>
        <a class="outline-gray-100 transition-transform transform hover:-translate-y-1 relative inline-block" href={href} target="_blank">
          <Icon />
        </a>
      </li>
    ))
  }
</ul>
