---
const { name, role, date, relationship, testimonial, imgSrc } = Astro.props;
---

<div class="bg-gray-100 border border-gray-200 rounded-lg shadow dark:bg-gray-700 dark:border-gray-700 p-6 mb-4">
  <div class="flex items-start">
    <div class="flex-shrink-0 mr-4">
      <img 
        src={imgSrc} 
        alt={`${name} profile picture`} 
        class="w-12 h-12 rounded-full object-cover"
      />
    </div>
    <div class="flex-1">
      <div class="flex flex-col mb-2">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{name}</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400">{role}</p>
        <p class="text-xs text-gray-400 dark:text-gray-500">{date}, {relationship}</p>
      </div>
      <div class="prose prose-sm dark:prose-invert text-gray-600 dark:text-gray-300">
        <p>{testimonial}</p>
      </div>
    </div>
  </div>
</div> 
